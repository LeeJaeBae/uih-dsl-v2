{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "UIH",
  "scopeName": "source.uih",
  "patterns": [
    {
      "include": "#blocks"
    },
    {
      "include": "#components"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "blocks": {
      "patterns": [
        {
          "name": "meta.block.uih",
          "begin": "\\b(meta|style|components|layout|script)\\b\\s*\\{",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.block.uih"
            }
          },
          "end": "\\}",
          "patterns": [
            {
              "include": "#components"
            },
            {
              "include": "#key-value-pairs"
            },
            {
              "include": "#component-list"
            }
          ]
        }
      ]
    },
    "component-list": {
      "patterns": [
        {
          "name": "entity.name.type.component.uih",
          "match": "\\b[A-Z][a-zA-Z0-9]*\\b"
        }
      ]
    },
    "components": {
      "patterns": [
        {
          "name": "meta.component.uih",
          "begin": "\\b([A-Z][a-zA-Z0-9]*)\\s*\\(",
          "beginCaptures": {
            "1": {
              "name": "entity.name.type.component.uih"
            }
          },
          "end": "\\)",
          "patterns": [
            {
              "include": "#component-props"
            }
          ]
        }
      ]
    },
    "component-props": {
      "patterns": [
        {
          "name": "meta.component-prop.uih",
          "match": "([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*\"([^\"]+)\"",
          "captures": {
            "1": {
              "name": "variable.parameter.prop-name.uih"
            },
            "2": {
              "name": "string.quoted.double.prop-value.uih"
            }
          }
        }
      ]
    },
    "key-value-pairs": {
      "patterns": [
        {
          "name": "meta.key-value.uih",
          "match": "([a-zA-Z_][a-zA-Z0-9_.]*)\\s*:\\s*\"([^\"]+)\"",
          "captures": {
            "1": {
              "name": "variable.other.property.uih"
            },
            "2": {
              "name": "string.quoted.double.value.uih"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.uih",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.uih",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}
