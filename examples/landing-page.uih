    Section(class: "cta-section", style: "padding: var(--spacing-3xl) var(--spacing-xl); background: var(--color-bg-dark); color: white; text-align: center") {
      H2(style: "font-size: var(--font-size-3xl); font-weight: var(--font-weight-extrabold); margin-bottom: var(--spacing-md)") {
