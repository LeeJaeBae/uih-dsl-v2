layout {
  Div(class: "page", style: "min-height: 100vh; background: var(--color-bg-primary)") {
    Header(class: "header", style: "display: flex; justify-content: space-between; align-items: center; padding: var(--spacing-lg) var(--spacing-3xl); background: var(--color-bg-primary); border-bottom: 1px solid var(--color-bg-secondary)") {
      Div(class: "logo", style: "font-size: var(--font-size-xl); font-weight: var(--font-weight-extrabold); color: var(--color-brand-primary)") {
        "ProductName"
      }
      Nav(class: "nav", style: "display: flex; gap: var(--spacing-lg); align-items: center") {
        A(href: "#features", style: "color: var(--color-text-body); text-decoration: none; font-weight: var(--font-weight-medium)") {
          "Features"
        }
        A(href: "#pricing", style: "color: var(--color-text-body); text-decoration: none; font-weight: var(--font-weight-medium)") {
          "Pricing"
        }
        A(href: "#contact", style: "color: var(--color-text-body); text-decoration: none; font-weight: var(--font-weight-medium)") {
          "Contact"
        }
        CTAButton(class: "cta-btn", style: "padding: var(--spacing-sm) var(--spacing-lg); background: var(--color-brand-primary); color: white; border-radius: var(--radius-full); font-weight: var(--font-weight-semibold); cursor: pointer; border: none") {
          "Get Started"
        }
      }
    }
